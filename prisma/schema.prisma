generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Game {
  id                  Int      @id @default(autoincrement())
  Name                String
  Link                String
  Categories          String
  Description         String
  NumberOfLikes       Int
  NumberOfPlays       Int
  InternalIdentifier  Int?
  Status              String    

}


model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  userName  String   @unique
  email     String?  @unique
  country   String?
  state     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}